<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width: 100%; background-color:ivory">
      <h1 class="display-4">
        <%=  @tag.title %>
      </h1>
      <p class="lead">
        <%= @tag.updated_at.strftime("%d/%m/%Y %H:%M:%S") %> <%= t('by') %> <%= @tag.post.user.email %>
      </p>
      <div class="post_body">
        <h3><%= @tag.post.description %></h3>
      </div>
    </div>
  </div>